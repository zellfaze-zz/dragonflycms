<?xml version="1.0" encoding="UTF-8"?>
<database version="1.0" name="dragonfly">

	<table name="banner" engine="myisam">
		<col name="bid" type="SERIAL"/>
		<col name="cid" type="INT" default="0"/>
		<col name="imptotal" type="INT" default="0"/>
		<col name="impmade" type="INT" default="0"/>
		<col name="clicks" type="INT" default="0"/>
		<col name="imageurl" type="VARCHAR" length="100" default=""/>
		<col name="clickurl" type="VARCHAR" length="200" default=""/>
		<col name="alttext" type="VARCHAR" length="255" default=""/>
		<col name="date" type="INT" default="0"/>
		<col name="dateend" type="INT" default="0"/>
		<col name="type" type="TINYINT" default="0"/>
		<col name="active" type="TINYINT" default="1"/>
		<col name="textban" type="TINYINT" default="0"/>
		<col name="text_width" type="INT" default="0"/>
		<col name="text_height" type="INT" default="0"/>
		<col name="text_title" type="VARCHAR" length="100" default=""/>
		<col name="text_bg" type="VARCHAR" length="32" default="#FFFFFF"/>
		<col name="text_clr" type="VARCHAR" length="32" default="#000000"/>
		<key name="PRIMARY" type="PRIMARY">
			<col name="bid"/>
		</key>
		<key name="cid">
			<col name="cid"/>
		</key>
	</table>

</database>
