	<hr/>

	<div>
		<form method="post" action="">
		<table><thead>
			<tr>
				<th colspan="2">Add custom userinfo field</th>
			</tr>
		</thead><tbody>
			<tr>
				<td>Fieldname</td>
				<td><input type="text" maxlength="25" size="25" name="fieldname" required="" pattern="[a-z_]+"/> ("my_age" for example)</td>
			</tr><tr>
				<td>Type</td>
				<td><select name="fieldtype">
					<option value="0">Text</option>
					<option value="1">Yes/No</option>
					<option value="2">Textarea</option>
					<option value="4">Number</option>
					<option value="5">Gender</option>
<!--					<option disabled="disabled" value="8">List</option>-->
				</select></td>
			</tr><tr>
				<td>Private</td>
				<td><select name="section">
					<option value="3">Yes</option>
					<option value="2">No</option>
				</select></td>
			</tr><tr>
				<td>Size</td>
				<td><input type="number" min="0" max="255" size="3" name="fieldsize"/> Between 0 and 255</td>
			</tr><tr>
				<td>Description</td>
				<td><input type="text" maxlength="255" size="50" name="fieldlang"/> ("My age" for example)</td>
			</tr>
		</tbody><tfoot>
			<tr>
				<td colspan="2" style="text-align:right">
					<button i18n:translate="_SAVECHANGES">Save Changes</button>
					<button type="reset" i18n:translate="_RESET">Reset</button>
				</td>
			</tr>
		</tfoot></table></form>
	</div>

</div>
