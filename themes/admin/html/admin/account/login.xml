<div class="border">
<form id="login" method="post" action="" tal:attributes="data-df-challenge php:Dragonfly\Output\Captcha::generateHidden()">
<fieldset>
	<legend i18n:translate="_ADMINLOGIN">Login to administration menu</legend>

	<label for="alogin" i18n:translate="_ADMINID">Nickname</label>
	<input type="text" maxlength="25" size="20" id="alogin" name="alogin" autofocus=""/>
	<br/>

	<label for="pwd" i18n:translate="">Password</label>
	<input type="password" maxlength="40" size="20" id="pwd" name="pwd"/>
	<br/>

	<label for="totp">TOTP (if configured)</label>
	<input type="text" maxlength="40" size="20" id="totp" name="totp" autocomplete="off"/>
	<br/>

	<label for="persistent" i18n:translate="_LOGIN_REMEMBERME">Remember me?</label>
	<input type="checkbox" id="persistent" name="persistent"/>
	<br/>

	<label></label>
	<button i18n:translate="">Login</button>
</fieldset>
</form>
</div>
